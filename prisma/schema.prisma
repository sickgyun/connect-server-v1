generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  GRADUATE
}

model User {
  userCode   Int     @id
  name       String
  email      String
  profileUrl String?
  cardinal   Int
  role       Role    @default(STUDENT)
  githubId   String?
  company    String?
  isGraduate Boolean
}

model StudenProfile {
  userCode   Int     @id
  name       String
  bio        String?
  email      String?
  profileUrl String?
  cardinal   Int
  githubId   String?
  company    String?
  position   String
  isGraduate Boolean
}

model MouComapnay {
  id         Int     @id @default(autoincrement())
  name       String
  url        String?
  profileUrl String?
  category   String?
  major      String?
}
