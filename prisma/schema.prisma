generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  GRADUATE
}

enum Position {
  FRONTEND
  BACKEND
  DEVOPS
  APP
  DESIGNER
}

model User {
  id         Int     @id
  name       String
  email      String
  profileUrl String
  cardinal   Int
  role       Role    @default(STUDENT)
  githubId   String?
  company    String?
  isGraduate Boolean
}

model Senior {
  id         Int      @id
  name       String
  email      String?
  profileUrl String
  cardinal   Int
  githubId   String?
  company    String?
  position   Position @default(FRONTEND)
}
